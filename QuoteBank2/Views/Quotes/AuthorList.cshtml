        <section id="QuotesTable">
            <!--        style="display: none;"-->
            <!--        - - - - - - Zero Box - - - - - -->

            <div id="tableContainer">
                <table id="yTable" class="table table-striped">

                    <colgroup>
                        <col span="1" style="width: 10%;">
                        <col span="1" style="width: 60%;">
                        <col span="1" style="width: 10%;">
                        <col span="1" style="width: 10%;">
                        <col span="1" style="width: 10%;">
                    </colgroup>




                    <thead style="border: solid grey 2px; border-style:outset;padding: 50px 5px 50px 5px;">
                        <tr>
                         
                            <th>AuthorID</th>
                            <th>Author</th>
                            <th class="rowimage" name="imgcol">Image</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var author in Model)
                        {
                            <tr>
                                <td class="">@Html.DisplayFor(model => author.AuthID) </td>
                                <td class="">@Html.DisplayFor(model => author.AuthorName)</td>
                                <td class="HiddenImage rowimage" name="imgcol"><img src="~/Content/Images/authors/@Html.DisplayFor(model => author.AuthorImage)" width="20" /></td>
                                <td>
                                    @Html.ActionLink(" Delete", "DeleteAuthor", new { id = author.AuthID },
                                    new { @class = "glyphicon glyphicon-th-trash btn btn-danger" })
                                </td>

                            </tr>

                        }
                    </tbody>

                </table>
                <p class="text-center">There are currently @ViewBag.AuthorCount authors in this list.</p>
                <br>
            </div> <!-- End of Table container -->

        </section>
    </div>
