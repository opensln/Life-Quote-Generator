            <p id="addQuoteButton" class="col-sm-4 pull-left" style="display:inline-block;">@Html.ActionLink("Add an Author", "AddAuthor", "Quotes", new { @class = "btn btn-default" })</p>

            <h2 id="QuotesPageTitle" class="col-sm-4 text-center" style="margin-top:0px;padding-top:8px;">Authors List</h2>
        </div>
